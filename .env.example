# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (recommended for Neon, Supabase, etc.)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Option 2: Use individual parameters (comment out DATABASE_URL if using this)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mssu_connect
# DB_USER=postgres
# DB_PASSWORD=your_database_password

# Connection pooling settings
DB_POOL_MIN=10
DB_POOL_MAX=100

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=HS256

# Encryption Configuration (32-byte key for AES-256)
ENCRYPTION_KEY=change-this-32-byte-key-in-prod
ENCRYPTION_ALGORITHM=aes-256-cbc

# SMS Gateway Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+919876543210

# Email Service Configuration
EMAIL_PROVIDER=ses
EMAIL_FROM=noreply@mssu.ac.in
EMAIL_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Storage Configuration (AWS S3)
S3_BUCKET=mssu-connect-uploads
S3_REGION=ap-south-1
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# Rate Limiting Configuration (in milliseconds)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
OTP_RATE_LIMIT_MAX=3

# Security Configuration
BCRYPT_SALT_ROUNDS=10
ACCOUNT_LOCK_DURATION=1800000
MAX_FAILED_ATTEMPTS=5
PASSWORD_RESET_EXPIRY=3600000
OTP_EXPIRY=300000

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
